# You Can FI Backend - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Database (required)
# =============================================================================

# PostgreSQL connection string
# For Supabase: Settings > Database > Connection string (Session pooler)
# For Railway: Variables tab in your PostgreSQL service
DATABASE_URL=postgresql+psycopg://postgres:password@host:5432/postgres

# =============================================================================
# Authentication (required)
# =============================================================================

# Supabase JWT Secret for token verification
# Get this from: https://app.supabase.com > Your Project > Settings > API > JWT Secret
SUPABASE_JWT_SECRET=your-jwt-secret-here

# =============================================================================
# Plaid Integration (optional - for bank account linking)
# =============================================================================

# Get these from: https://dashboard.plaid.com/developers/keys
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENVIRONMENT=sandbox  # sandbox, development, or production

# Encryption key for storing Plaid access tokens
# Generate with: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
PLAID_ENCRYPTION_KEY=your-encryption-key

# OAuth redirect URI (required for production)
PLAID_OAUTH_REDIRECT_URI=https://your-backend.railway.app/oauth/callback

# =============================================================================
# Optional Settings
# =============================================================================

# Enable debug mode (default: false)
# DEBUG=true

# CORS origins (default: ["*"])
# CORS_ORIGINS=["https://your-app.com"]

# Batch sync API key (for scheduled sync jobs)
# BATCH_SYNC_API_KEY=your-secret-api-key
